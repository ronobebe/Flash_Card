<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#B1AEAE"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="#B1AEAE"/>

    <TextView
        android:id="@+id/itemCount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:textColor="#3E3D3D"
        android:textSize="15sp"
        android:text="0"
        android:gravity="center"
        android:background="@drawable/list_number_circle"/>

    <RelativeLayout
        android:id="@+id/categorylayout"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/itemCount"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/textview_outline">

        <TextView
            android:id="@+id/questions"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left|top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#1C1C1C"
            android:textSize="15sp"
            android:maxLines="2"
            android:text="jhvvbdcfjds sdhbdsfhbds
            dsjhbdsfhbdsdsjhbfds dskjbdsjhbds
bgbvhgvhgcvhgvhvcgvh"
            />

        <TextView

            android:focusableInTouchMode="false"
            android:focusable="false"
            android:id="@+id/lastVisitDate"
            android:paddingLeft="10dp"
            android:gravity="left|center"
            android:maxLines="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#676666"
            android:textSize="15sp"
            android:text="Last visit Date : Mar 23, 2020"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            />


    </RelativeLayout>








</androidx.constraintlayout.widget.ConstraintLayout>